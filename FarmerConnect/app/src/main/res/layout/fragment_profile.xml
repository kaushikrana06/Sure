<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearColumnreply"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_bg_teal_400_7f_radius_bl_40_br_40"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileFragment">
    <LinearLayout
        android:id="@+id/linearColumnarrowleft"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_30pxh"
        android:layout_marginStart="@dimen/_30pxh"
        android:layout_marginTop="@dimen/_16pxv"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:gravity="start"
            android:id="@+id/toolbarToolbar"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <LinearLayout
                android:id="@+id/linearRowarrowleft"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageArrowleft"
                    android:layout_height="@dimen/_16pxh"
                    android:layout_marginBottom="@dimen/_5pxv"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_width="@dimen/_16pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrowleft_black_900"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_arrowleft_black_900"/>
                <TextView
                    android:ellipsize="end"
                    android:id="@+id/txtProfile"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_96pxh"
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:text="Profile"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    tools:text="@string/lbl_profile"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/save"
                    android:visibility="gone"
                    android:text="Save"
                    android:textSize="@dimen/_20pxh"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:id="@+id/linearRowellipsefive"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8pxh"
            android:layout_marginTop="@dimen/_42pxv"
            android:layout_width="match_parent" android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_centerInParent="true"
                    app:civ_border_width="@dimen/_2pxh"
                    android:id="@+id/proimg"
                    android:src="@drawable/photo"
                    app:civ_border_color="@color/white"
                    android:layout_height="@dimen/_90pxh"
                    android:layout_marginBottom="@dimen/_11pxv"
                    android:layout_width="@dimen/_90pxh"/>

                <ImageButton
                    android:id="@+id/btnCamera"
                    android:visibility="gone"
                    android:layout_width="@dimen/_35pxh"
                    android:layout_height="@dimen/_35pxh"
                    android:layout_gravity="bottom|end"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_marginEnd="@dimen/_4pxh"
                    android:background="@drawable/rectangle_bg_white_a700_radius_17_5"
                    android:paddingHorizontal="@dimen/_6pxh"
                    android:paddingVertical="@dimen/_6pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_camera"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:id="@+id/linearColumnshivnadhar"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_17pxh"
                android:layout_marginTop="@dimen/_13pxv"
                android:layout_weight="0.67"
                android:layout_width="0dp" android:orientation="vertical">
                <TextView
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/protxt"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_22pxh"
                    android:layout_marginStart="@dimen/_27pxh"
                    android:layout_width="match_parent"
                    android:singleLine="true" />
                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end" android:gravity="center"
                    android:id="@+id/btnEditProfile"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18pxv"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_5pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_5pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_edit_profile"
                    android:background="@drawable/scan_btn"
                    android:textAllCaps="false"
                    tools:text="@string/lbl_edit_profile"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearColumnsettings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10pxv"
        android:background="@drawable/prod_btm"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearRowsettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_34pxh"
            android:layout_marginTop="@dimen/_56pxv"
            android:layout_marginEnd="@dimen/_34pxh"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageSettings"
                android:layout_width="@dimen/_20pxh"
                android:layout_height="@dimen/_20pxh"
                android:layout_marginBottom="@dimen/_3pxv"
                android:scaleType="fitXY"
                android:src="@drawable/img_settings_teal_400"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_settings_teal_400" />

            <TextView
                android:id="@+id/txtSettingsOne"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_weight="0.77"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Settings"
                android:clickable="true"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRowvector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_34pxh"
            android:layout_marginTop="@dimen/_18pxv"
            android:layout_marginEnd="@dimen/_34pxh"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageVector"
                android:layout_width="@dimen/_21pxh"
                android:layout_height="@dimen/_21pxh"
                android:layout_marginBottom="@dimen/_2pxv"
                android:scaleType="fitXY"
                android:src="@drawable/img_vector_teal_400"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_vector_teal_400" />

            <TextView
                android:id="@+id/txtDonationHistor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_weight="0.86"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/msg_donation_histor2"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRowlink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_34pxh"
            android:layout_marginTop="@dimen/_18pxv"
            android:layout_marginEnd="@dimen/_34pxh"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageLink"
                android:layout_width="@dimen/_21pxh"
                android:layout_height="@dimen/_21pxh"
                android:layout_marginBottom="@dimen/_2pxv"
                android:scaleType="fitXY"
                android:src="@drawable/img_link"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_link" />

            <TextView
                android:id="@+id/txtHelp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_weight="0.64"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/lbl_help"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRowquestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_33pxh"
            android:layout_marginTop="@dimen/_18pxv"
            android:layout_marginEnd="@dimen/_33pxh"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageQuestion"
                android:layout_width="@dimen/_23pxh"
                android:layout_height="@dimen/_23pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_question"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_question" />

            <TextView
                android:id="@+id/txtInformation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_28pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_weight="0.8"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/lbl_information"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRowvectorOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_36pxh"
            android:layout_marginTop="@dimen/_19pxv"
            android:layout_marginEnd="@dimen/_36pxh"

            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageVectorOne"
                android:layout_width="@dimen/_19pxh"
                android:layout_height="@dimen/_20pxh"
                android:layout_marginBottom="@dimen/_3pxv"
                android:scaleType="fitXY"
                android:src="@drawable/img_vector_teal_400_20x19"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_vector_teal_400_20x19" />

            <TextView
                android:id="@+id/logout_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_weight="0.76"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/lbl_log_out"
               />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


