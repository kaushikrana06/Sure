<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetEmailPasswordActivity">


    <ImageView
        android:id="@+id/logoimage2"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="35dp"
        android:src="@drawable/logo" />
    <EditText
        android:id="@+id/enterResetEmail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Enter Email"
        android:textSize="22dp"
        android:backgroundTint="#E1DADA"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:paddingStart="25dp"
        android:background="@drawable/roundstyle"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/resetyourpassword"/>

    <Button
        android:id="@+id/sendResetLink"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/greencolor"
        android:text="Reset password"
        android:textAllCaps="true"
        android:textSize="25dp"
        android:layout_below="@+id/enterResetEmail"/>

    <TextView
        android:id="@+id/resetyourpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Your Password"
        android:layout_marginTop="25dp"
        android:textSize="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@+id/logoimage2"/>

    <TextView
        android:id="@+id/txtViewGoToLoginFromResetEmailPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendResetLink"
        android:layout_marginStart="215dp"
        android:layout_marginBottom="250dp"
        android:layout_marginTop="15dp"
        android:text="Login to your Account"
        android:textColor="@color/black"
        android:textSize="17dp" />

</RelativeLayout>